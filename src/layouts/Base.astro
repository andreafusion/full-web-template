---
import { site } from '../data/site';
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
  ogImage?: string;
}

const {
  title = `${site.brand} â€” ${site.tagline}`,
  description = site.description,
  ogImage = site.ogImage,
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, site.url);
---

<!doctype html>
<html lang={site.lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <meta name="robots" content="index, follow" />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(ogImage, site.url)} />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={new URL(ogImage, site.url)} />

    <link rel="canonical" href={canonicalURL} />
    <meta name="theme-color" content="#E8C4C4" />

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400;0,700;1,400&family=Poppins:wght@300;400;500;600&display=swap"
      rel="stylesheet"
    />

    <title>{title}</title>
  </head>
  <body>
    <a href="#main-content" class="skip-link">Saltar al contenido principal</a>
    <slot />
  </body>
</html>
